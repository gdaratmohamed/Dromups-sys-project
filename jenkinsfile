pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('Dockerhub-credentials')
        GITHUB_CREDENTIALS = credentials('github-credentials')
        DOCKER_IMAGE_FRONTEND = 'gdaratmohamed/front-image'
        DOCKER_IMAGE_BACKEND = 'gdaratmohamed/backend-ai'
        // Define a tag based on the build number
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }

    triggers {
        githubPush()
    }
    
    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                checkout scm
            }
        }

        stage('Tests') {
            agent {
                docker {
                    image 'node:20-alpine'
                    args '-u root'
                    reuseNode true
                }
            }
            steps {
                sh 'ls -l Jenkins/scripts/test.sh'
                sh 'chmod +x Jenkins/scripts/test.sh'
                sh './Jenkins/scripts/test.sh'
            }
        }

        stage('Build Backend') {
            steps {
                // Build with both latest and build number tags
                sh 'docker build -t $DOCKER_IMAGE_BACKEND:latest -t $DOCKER_IMAGE_BACKEND:$IMAGE_TAG ./ai-model'
            }
        }

        stage('Build Frontend') {
            steps {
                // Build with both latest and build number tags
                sh 'docker build -t $DOCKER_IMAGE_FRONTEND:latest -t $DOCKER_IMAGE_FRONTEND:$IMAGE_TAG ./frontend'
            }
        }

        stage('Push Images') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                // Push both latest and tagged images
                sh 'docker push $DOCKER_IMAGE_FRONTEND:latest'
                sh 'docker push $DOCKER_IMAGE_FRONTEND:$IMAGE_TAG'
                sh 'docker push $DOCKER_IMAGE_BACKEND:latest'
                sh 'docker push $DOCKER_IMAGE_BACKEND:$IMAGE_TAG'
            }
        }
    }
}