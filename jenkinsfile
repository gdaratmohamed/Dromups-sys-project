pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('Dockerhub-credentials')
        GITHUB_CREDENTIALS = credentials('github-credentials')
        DOCKER_IMAGE_FRONTEND = 'gdaratmohamed/front-image'
        DOCKER_IMAGE_BACKEND = 'gdaratmohamed/backend-ai'
    }

      triggers {
            githubPush()
        }
        
        stages {

            stage('Checkout') {
                steps {
                    cleanWs()
                    checkout scm
                }
            }

        stage('tests') {
            agent {
                docker {
                    image 'node:20-alpine'
                    args '-u root'
                    reuseNode true
                }
            }
            steps {
                  sh 'ls -l Jenkins/scripts/test.sh'
                  sh 'chmod +x Jenkins/scripts/test.sh'
                  sh './Jenkins/scripts/test.sh'
            }
        }

        stage('Build Backend') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE_BACKEND:latest ./ai-model'
            }
        }
        stage('Build Frontend') {
            steps {
                sh 'docker build -t $DOCKER_IMAGE_FRONTEND:latest ./frontend'
            }
        }

        stage('Push Images') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                sh 'docker push $DOCKER_IMAGE_FRONTEND:latest'
                sh 'docker push $DOCKER_IMAGE_BACKEND:latest'
            }
        }
    }
}
